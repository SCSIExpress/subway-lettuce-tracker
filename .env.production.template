# Production Environment Configuration for Subway Lettuce Tracker
# Copy this file to .env.production and customize for your production environment

#############################
# Core Application Settings #
#############################

# Environment (should be production)
NODE_ENV=production

# Application ports
PORT=5000

#############################
# Database Configuration    #
#############################

# PostgreSQL password (CHANGE THIS!)
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Full database connection string
# For external database, override this completely
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/subway_lettuce_tracker

#############################
# Redis Configuration       #
#############################

# Redis password (CHANGE THIS!)
REDIS_PASSWORD=your_secure_redis_password_here

# Full Redis connection string
# For external Redis, override this completely
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

#############################
# Frontend Configuration    #
#############################

# Your production domain
DOMAIN_NAME=your-domain.com

# Frontend URL for CORS (use your domain)
FRONTEND_URL=https://your-domain.com

# Backend API URL for frontend (use your domain)
VITE_API_URL=https://your-domain.com/api

# Google Maps API Key (REQUIRED - get from Google Cloud Console)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Application name
VITE_APP_NAME="Subway Lettuce Tracker"

# Default search radius in meters
VITE_DEFAULT_RADIUS=5000

# Maximum locations to display
VITE_MAX_LOCATIONS=100

#############################
# Feature Flags             #
#############################

# Enable offline mode
VITE_ENABLE_OFFLINE_MODE=true

# Enable Progressive Web App features
VITE_ENABLE_PWA=true

# Enable analytics (recommended for production)
VITE_ENABLE_ANALYTICS=true

# Enable caching (recommended for production)
ENABLE_CACHE=true

# Cache TTL in seconds (2 hours for production)
CACHE_TTL=7200

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

#############################
# Security Settings         #
#############################

# Rate limiting window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (stricter for production)
RATE_LIMIT_MAX_REQUESTS=50

# Trust proxy (set to true if behind reverse proxy)
TRUST_PROXY=true

#############################
# Logging & Debugging       #
#############################

# Log level (warn or error for production)
LOG_LEVEL=warn

# Debug patterns (disable for production)
DEBUG=

#############################
# SSL/TLS Configuration     #
#############################

# SSL certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

#############################
# Monitoring (Optional)     #
#############################

# Grafana admin user
GRAFANA_USER=admin

# Grafana admin password (CHANGE THIS!)
GRAFANA_PASSWORD=your_secure_grafana_password_here

#############################
# Backup Configuration      #
#############################

# Database backup settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

#############################
# Email Configuration       #
#############################

# SMTP settings for notifications
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your_email_password_here
SMTP_FROM=noreply@your-domain.com