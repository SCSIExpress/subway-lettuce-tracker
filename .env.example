# Environment Configuration for Subway Lettuce Tracker

# Application Environment
NODE_ENV=production

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://postgres:your_secure_postgres_password@postgres:5432/subway_lettuce_tracker

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@redis:6379

# API Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:5000/api

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Domain Configuration (for production)
DOMAIN_NAME=your-domain.com