{
  "name": "subway-lettuce-tracker-backend",
  "version": "1.0.0",
  "description": "Backend API for Subway Lettuce Tracker",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "test:db": "ts-node src/scripts/testDatabase.ts",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:status": "ts-node src/database/migrate.ts status",
    "migrate:rollback": "ts-node src/database/migrate.ts rollback",
    "seed": "ts-node src/scripts/seedLocations.ts",
    "load-test": "artillery run artillery-config.yml",
    "benchmark": "ts-node src/scripts/performanceBenchmark.ts",
    "benchmark:quick": "ts-node src/scripts/performanceBenchmark.ts -- --no-cache --quiet"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "pg": "^8.11.3",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "artillery": "^2.0.23",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
